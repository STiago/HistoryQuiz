<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.victoria.historyquiz.MainActivity">

    <Button
        android:text="Iniciar Juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:id="@+id/inicjuego"
        android:onClick="iniciarJuego" />

    <Button
        android:text="Resultados y Estadísticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inicjuego"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/resultados"
        android:onClick="resultadosEstadisticas (MainActivity)" />

    <Button
        android:text="Otros Juegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultados"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/otrosJuegos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a HistoryQuiz!"
        android:id="@+id/c1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>
